{
  "name": "prompt-enhancer-ex",
  "displayName": "Prompt Enhancer - Build Advanced Prompts with OpenAI API",
  "description": "Transform basic prompts into sophisticated, detailed prompts using OpenAI's API",
  "version": "1.0.8",
  "publisher": "ruhanirabin",
  "icon": "images/pex-icon-300px.png",
  "license": "MIT",
  "licenseText": "MIT License\n\nCopyright (c) 2025 Ruhani Rabin\n\nPermission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files (the \"Software\"), to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software, and to permit persons to whom the Software is furnished to do so, subject to the following conditions:\n\nThe above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software.\n\nTHE SOFTWARE IS PROVIDED \"AS IS\", WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM, OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruhanirabin/vscode-prompt-enhancer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "AI",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "prompt",
    "ai",
    "openai",
    "enhancement",
    "writing",
    "productivity",
    "ai coding",
    "Al coding assistant",
    "Al development tools",
    "ai extension",
    "Al prompt best practices",
    "ai prompt enhancer",
    "ai prompt generator",
    "Al prompt helper",
    "better prompts",
    "Claude coding",
    "Claude prompts",
    "code generation",
    "coding efficiency",
    "coding productivity",
    "coding prompt fixer",
    "cursor for prompts",
    "developer tools",
    "github copilot chat",
    "keybindings",
    "programming assistant",
    "prompt engineering",
    "prompt optimization",
    "prompt rewriting tool",
    "vibe coding prompting",
    "vscode extension",
    "prompt improvement",
    "prompt refinement",
    "text enhancement",
    "VS Code prompts",
    "vibe coding"
  ],
  "activationEvents": [
    "onCommand:promptEnhancer.enhance",
    "onCommand:promptEnhancer.configureApiKey",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "promptEnhancer.enhance",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "promptEnhancer.enhance",
        "title": "Enhance Prompt",
        "category": "Prompt Enhancer",
        "icon": {
          "light": "images/pex-icon-24px-01.png",
          "dark": "images/pex-icon-24px-01.png"
        }
      },
      {
        "command": "promptEnhancer.enhanceFromEditor",
        "title": "Enhance Entire Editor Text",
        "category": "Prompt Enhancer",
        "icon": "$(symbol-text)"
      },
      {
        "command": "promptEnhancer.configureApiKey",
        "title": "Configure API Key",
        "category": "Prompt Enhancer"
      },
      {
        "command": "promptEnhancer.manageTemplates",
        "title": "Manage Templates",
        "category": "Prompt Enhancer"
      },
      {
        "command": "promptEnhancer.viewHistory",
        "title": "View Enhancement History",
        "category": "Prompt Enhancer",
        "icon": "$(history)"
      },
      {
        "command": "promptEnhancer.savePrompt",
        "title": "Save Prompt to File",
        "category": "Prompt Enhancer",
        "icon": "$(save)"
      },
      {
        "command": "promptEnhancer.selectModel",
        "title": "Select OpenAI Model",
        "category": "Prompt Enhancer",
        "icon": "$(symbol-method)"
      },
      {
        "command": "promptEnhancer.toggleDebugMode",
        "title": "Toggle Debug Mode",
        "category": "Prompt Enhancer",
        "icon": "$(bug)"
      },
      {
        "command": "promptEnhancer.clearHistory",
        "title": "Clear Enhancement History",
        "category": "Prompt Enhancer",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "promptEnhancer.enhance",
        "key": "ctrl+shift+alt+/",
        "mac": "cmd+shift+alt+/",
        "when": "editorTextFocus || webviewFocus || terminalFocus"
      },
      {
        "command": "promptEnhancer.configureApiKey",
        "key": "ctrl+shift+alt+p",
        "mac": "cmd+shift+alt+p"
      },
      {
        "command": "promptEnhancer.manageTemplates",
        "key": "ctrl+shift+alt+t",
        "mac": "cmd+shift+alt+t"
      },
      {
        "command": "promptEnhancer.viewHistory",
        "key": "ctrl+shift+alt+h",
        "mac": "cmd+shift+alt+h"
      },
      {
        "command": "promptEnhancer.toggleDebugMode",
        "key": "ctrl+shift+alt+d",
        "mac": "cmd+shift+alt+d"
      },
      {
        "command": "promptEnhancer.selectModel",
        "key": "ctrl+shift+alt+m",
        "mac": "cmd+shift+alt+m"
      }
    ],
    "configuration": {
      "title": "Prompt Enhancer",
      "properties": {
        "promptEnhancer.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use (use QuickPick model selector for full dynamic list)"
        },
        "promptEnhancer.timeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "API request timeout in milliseconds"
        },
        "promptEnhancer.defaultTemplate": {
          "type": "string",
          "default": "general",
          "description": "Default enhancement template ID to use (now supports dynamic templates)"
        },
        "promptEnhancer.maxTokens": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 4000,
          "description": "Maximum tokens for API response"
        },
        "promptEnhancer.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Creativity level (0 = focused, 2 = very creative)"
        },
        "promptEnhancer.customTemplate": {
          "type": "string",
          "default": "Please enhance this prompt to make it more effective and detailed:",
          "description": "Custom template for prompt enhancement"
        },
        "promptEnhancer.savePromptDirectory": {
          "type": "string",
          "default": "",
          "description": "Default directory to save prompts (leave empty to use workspace root)"
        },
        "promptEnhancer.apiKeyStatus": {
          "type": "string",
          "enum": [
            "not-configured",
            "configured"
          ],
          "default": "not-configured",
          "description": "OpenAI API Key status (use 'Configure API Key' command to set)",
          "enumDescriptions": [
            "API Key not configured - use Command Palette: 'Prompt Enhancer: Configure API Key'",
            "API Key is configured and stored securely"
          ]
        },
        "promptEnhancer.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for detailed logging (useful for troubleshooting)"
        },
        "promptEnhancer.enableHistory": {
          "type": "boolean",
          "default": true,
          "description": "Enable prompt enhancement history (syncs with VSCode profile if enabled)"
        },
        "promptEnhancer.historyLimit": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of enhancement history entries to keep"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package-ext": "webpack --mode production --devtool hidden-source-map",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.56.0",
    "glob": "^11.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^4.28.0"
  }
}
